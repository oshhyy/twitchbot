{
  "name": "@kararty/dank-twitch-irc",
  "version": "5.0.0",
  "description": "Twitch IRC library for Node.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "types",
    "lib"
  ],
  "scripts": {
    "build": "tsc && sed -i '1,1 s/types=\"debug-logger\"/path=\"\\.\\.\\/types\\/debug-logger\\/index.d.ts\"/' ./dist/index.d.ts",
    "check-format": "prettier --ignore-path .gitignore --check \"**/*.md\" \"**/*.js\" \"**/*.ts\" \"**/*.yml\" \"**/*.json\"",
    "reformat": "prettier --ignore-path .gitignore --write \"**/*.md\" \"**/*.js\" \"**/*.ts\" \"**/*.yml\" \"**/*.json\"",
    "test": "nyc mocha",
    "clean": "rm -rf ./dist ./docs ./coverage ./.nyc_output ./mochawesome-report",
    "docs": "typedoc --excludePrivate --excludeProtected -out ./docs lib/index.ts",
    "generate-index": "npx create-ts-index@^1.10.2 create ./lib -w -i '.spec' && npm run reformat",
    "precommit": "npm run clean && npm run build && npm run test && npm run reformat && npm run check-format --max-warnings=0",
    "generate-readme-toc": "doctoc README.md --github --title \"## Table of Contents\"",
    "preversion": "npm run check-format",
    "version": "npm run reformat && git add -A lib",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "twitch",
    "irc",
    "chat",
    "tmi"
  ],
  "author": "Ruben Anders",
  "license": "MIT",
  "repository": "https://github.com/kararty/dank-twitch-irc",
  "dependencies": {
    "@types/debug": "^4.1.7",
    "@types/duplexify": "^3.6.1",
    "debug-logger": "^0.4.1",
    "duplexify": "^4.1.2",
    "eventemitter3": "^4.0.7",
    "lodash.camelcase": "^4.3.0",
    "lodash.pickby": "^4.6.0",
    "make-error-cause": "^2.3.0",
    "ms": "^2.1.3",
    "randombytes": "^2.1.0",
    "semaphore-async-await": "^1.5.1",
    "simple-websocket": "^9.1.0",
    "split2": "^4.1.0"
  },
  "devDependencies": {
    "@types/async-lock": "^1.1.5",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/lodash.camelcase": "^4.3.6",
    "@types/lodash.pickby": "^4.6.6",
    "@types/mocha": "^9.1.0",
    "@types/ms": "^0.7.31",
    "@types/node": "^17.0.24",
    "@types/randombytes": "^2.0.0",
    "@types/randomstring": "^1.1.8",
    "@types/simple-websocket": "^7.0.3",
    "@types/sinon": "^10.0.11",
    "@types/split2": "^3.2.1",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "clarify": "^2.1.0",
    "doctoc": "^2.1.0",
    "eslint": "^8.13.0",
    "mocha": "^9.2.2",
    "mocha-junit-reporter": "^2.0.2",
    "mochawesome": "^7.1.3",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "sinon": "^13.0.2",
    "supports-color": "^9.2.2",
    "ts-node": "^10.7.0",
    "tsd": "^0.20.0",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.3"
  },
  "bugs": {
    "url": "https://github.com/kararty/dank-twitch-irc/issues"
  },
  "homepage": "https://github.com/kararty/dank-twitch-irc#readme",
  "directories": {
    "lib": "lib"
  }
}
